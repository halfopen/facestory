/* pages/selfie_result/selfie_result.wxss */
.container{
    padding: 0;
    margin: auto 40rpx;
    overflow: visible;
}
.avatar-container{
    padding: 20rpx 0rpx;
}
.head-pic .avatar-container .avatar-container-image{
    width:200rpx;
    height:200rpx;
    position:relative;
    margin-left:50%;
    left:-100rpx;
    border:1px solid black;
    border-radius:100rpx;

}

.tag-name-container{
    text-align: center;
}

.result{
    background: white;
    padding: 20rpx 30rpx;
    margin-bottom: 20rpx;
    width: 100%;
    border-radius: 20rpx;
    min-height: 200rpx;
    box-shadow:1px 2px 3px #dddddd;
}

.item-line{
    background:black;
    height:2rpx;
    width:100%;
    padding: 2rpx 2rpx;
    margin-top:10rpx;
}

.result .image-container{
    text-align: center;
}
.result image{
    width:300rpx;
    height: 300rpx;
    display: inline-block;
}

.item-more{
    float:right;
    color:#E51C23;

}

/* 点赞 */
.like-container{
    text-align: center;
}

.like-container image{
    width: 50rpx;
    height: 50rpx;
    display: block;
}
.like-container text{
    display: block;
}